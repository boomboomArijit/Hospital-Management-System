@model IEnumerable<Hospital_Management_System.Models.Billing>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h2>All Appointments</h2>

<style>
    body {
        background-image: url('../../content/images/aaaaaaa.jpg');
        background-position: center;
        background-size: 1360px 768px;
        background-color: #77c9d4;
        font-family: Arial, sans-serif;
    }
</style>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PatientName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PatientAge)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DoctorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalBill)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PatientName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PatientAge)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoctorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalBill)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id = item.BillID }, new { @class = "btn btn-warning" })*@
                @Html.ActionLink("Details", "Details", new { id = item.BillID }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Delete", "Delete", new { id = item.BillID }, new { @class = "btn btn-danger" })

            </td>
        </tr>

    }

</table>
<p>
    @Html.ActionLink("<<<<Back To Home Page", "Index", "Doctors1", null, new { @class = "btn btn-warning" })
</p>
