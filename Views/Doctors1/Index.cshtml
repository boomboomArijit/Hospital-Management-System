@model IEnumerable<Hospital_Management_System.Models.Doctor>

@{
    ViewBag.Title = "Doctor List";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h2>Doctor List</h2>


<p>
    @Html.ActionLink("🧑‍⚕Add New Doctor🧑‍⚕", "Create", null, new { @class = "btn btn-primary" })
    @Html.ActionLink("Edit Patient Details📝", "Index", "Patients", null, new { @class = "btn btn-warning" })
    @Html.ActionLink("🙇‍♂️Edit Appointments🙇‍♂️", "Index", "Billings", null, new { @class = "btn btn-dark" })
</p>
<table class="table">
    <tr>
        <th>

            @Html.DisplayNameFor(model => model.DoctorName)

        <th>
            @Html.DisplayNameFor(model => model.Specialization)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DoctorFees)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DoctorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specialization)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoctorFees)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.DoctorID }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Details", "Details", new { id = item.DoctorID }, new { @class = "btn btn-dark" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.DoctorID }, new { @class = "btn btn-danger" })
            </td>
        </tr>
        <style>
            body {
                background-image: url('../../content/images/aabb.jpg');
                background-position: center;
                background-size: 1360px 768px;
                background-color: #77c9d4;
                font-family: Arial, sans-serif;
            }
        </style>




    }

</table>
